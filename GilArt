    <script>
        let selectedServices = [];

        function addService(serviceName, icon) {
            // Verifica se o servi√ßo j√° foi adicionado
            if (selectedServices.find(s => s.name === serviceName)) {
                return;
            }

            const service = {
                id: Date.now(),
                name: serviceName,
                icon: icon
            };

            selectedServices.push(service);
            updateSelectedServices();
        }

        function removeService(id) {
            selectedServices = selectedServices.filter(s => s.id !== id);
            updateSelectedServices();
        }

        function updateSelectedServices() {
            const container = document.getElementById('selectedServices');
            
            if (selectedServices.length === 0) {
                container.innerHTML = '<p class="text-gray-500 text-center py-8">Clique nos servi√ßos acima para adicionar √† sua lista</p>';
                return;
            }

            container.innerHTML = selectedServices.map(service => `
                <div class="selected-item flex items-center justify-between bg-purple-50 p-3 rounded-lg border border-purple-200">
                    <div class="flex items-center space-x-3">
                        <span class="text-xl">${service.icon}</span>
                        <span class="font-medium text-gray-800">${service.name}</span>
                    </div>
                    <button onclick="removeService(${service.id})" class="text-red-500 hover:text-red-700 font-bold">
                        ‚úï
                    </button>
                </div>
            `).join('');
        }

        function clearAll() {
            selectedServices = [];
            updateSelectedServices();
        }

        function generatePDF() {
            if (selectedServices.length === 0) {
                alert('Selecione pelo menos um servi√ßo para gerar o PDF!');
                return;
            }

            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            // Cabe√ßalho
            doc.setFontSize(20);
            doc.text('GilArt - Or√ßamento de Servi√ßos', 20, 30);
            
            doc.setFontSize(12);
            doc.text('Data: ' + new Date().toLocaleDateString('pt-BR'), 20, 45);
            doc.text('WhatsApp: (79) 98106-5735', 20, 55);

            // Lista de servi√ßos
            doc.setFontSize(16);
            doc.text('Servi√ßos Solicitados:', 20, 75);

            let yPosition = 90;
            selectedServices.forEach((service, index) => {
                doc.setFontSize(12);
                doc.text(`${index + 1}. ${service.name}`, 25, yPosition);
                yPosition += 10;
            });

            // Rodap√©
            yPosition += 20;
            doc.setFontSize(10);
            doc.text('Entre em contato conosco para receber um or√ßamento personalizado!', 20, yPosition);
            doc.text('GilArt - Solu√ß√µes Criativas', 20, yPosition + 10);

            // Download do PDF
            doc.save('GilArt-Orcamento.pdf');
        }

        function sendWhatsApp() {
            if (selectedServices.length === 0) {
                alert('Selecione pelo menos um servi√ßo para enviar!');
                return;
            }

            const phoneNumber = '5579981065735';
            let message = 'üé® *GilArt - Solicita√ß√£o de Or√ßamento*\n\n';
            message += 'Ol√°! Tenho interesse nos seguintes servi√ßos:\n\n';
            
            selectedServices.forEach((service, index) => {
                message += `${index + 1}. ${service.icon} ${service.name}\n`;
            });
            
            message += '\nPoderia me enviar um or√ßamento personalizado?\n\n';
            message += 'Obrigado! üòä';

            const encodedMessage = encodeURIComponent(message);
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
            
            window.open(whatsappUrl, '_blank');
        }
    </script>
